	unsigned char hora, minutos, segundos;
	hora = 2;
	minutos = 59;
	segundos = 59;


	if ((minutos >= 59) & (hora == 23)){
		hora = 0;
		minutos = 0;
	} else if (minutos >= 59){
		hora += 1;
	}
	if ((segundos >= 59) & (minutos == 0)){
		segundos = 0;
	} else if (segundos >= 59) {
		segundos = 0;
	} else {
		segundos += 1;
	}
	return 0;
